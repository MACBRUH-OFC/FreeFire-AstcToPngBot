{
  "version": 2,
  "functions": {
    "main.py": {
      "runtime": "python@3.12",
      "handler": "main.handler"
    }
  },
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "30mb",
        "includeFiles": ["astcenc"],
        "buildCommand": "chmod +x astcenc && pip install -r requirements.txt",
        "pythonVersion": "3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main.py",
      "methods": ["GET", "POST"]
    }
  ]
}
